{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "screens/*": ["src/screens/*"],
      "modals/*": ["src/modals/*"],
      "constants/*": ["src/constants/*"],
      "redux/*": ["src/redux/*"],
      "modalViews/*": ["src/modalViews/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
